@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:400,200,700')

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family Helvetica, "Helvetica Neue", Verdana, Sans;

#header
  background-color black
  color white
  height 5%;
  font-weight bold


  span
    font-size 150%

  a
    color white

#main
   height 100%
   width: 100%
   position fixed
   left 0px
   top 0px 

.title
   margin-top auto
   margin-bottom auto

#leftpanel
   height 95%
   width 30%
   float left
   border 1px black solid

#rightpanel
   height 95%
   width 70%
   float right
   border 1px black solid

#searchparam
   height 80%
   width 100%

#collectioncontrol
   width 100%